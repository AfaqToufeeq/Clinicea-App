<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#F3F3F3"
    tools:context=".Dashboard.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="6dp"
            android:elevation="6dp"
            android:padding="13dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_marginTop="4dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    app:cardElevation="3dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="4dp"
                    android:layout_gravity="center"
                    android:padding="6dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/totalPatientsPic"
                            android:layout_width="95dp"
                            android:layout_height="85dp"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/poppins_semibold"
                            android:src="@drawable/patient" />

                        <TextView
                            android:id="@+id/patientsNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/totalPatientsPic"
                            android:padding="1.5dp"
                            android:layout_marginRight="3dp"
                            android:text="Total Patients"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/numberOfPatients"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/patientsNumber"
                            android:padding="2dp"
                            android:textColor="@color/jerBlue2"
                            android:layout_marginLeft="20dp"
                            android:textSize="18dp"
                            android:text="1500" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    app:cardElevation="3dp"
                    android:elevation="3dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="4dp"
                    android:layout_gravity="center"
                    android:padding="6dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/currentPatientsPic"
                            android:layout_width="95dp"
                            android:layout_height="85dp"
                            android:layout_centerHorizontal="true"
                            android:padding="2dp"
                            android:src="@drawable/current_patient" />

                        <TextView
                            android:id="@+id/patientsNumber2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/currentPatientsPic"
                            android:layout_centerHorizontal="true"
                            android:padding="1.5dp"
                            android:text="Today Patients"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/numberOfPatients2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/patientsNumber2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="20dp"
                            android:padding="2dp"
                            android:text="10"
                            android:textColor="@color/jerBlue2"
                            android:textSize="18dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    android:elevation="3dp"
                    android:layout_alignParentRight="true"
                    app:cardCornerRadius="4dp"
                    android:padding="6dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/appoitmentsPic"
                    android:layout_width="95dp"
                    android:layout_height="85dp"
                    android:padding="2dp"
                    android:src="@drawable/appoitnments" />

                        <TextView
                            android:id="@+id/patientsNumber3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/appoitmentsPic"
                            android:layout_marginLeft="3dp"
                            android:padding="1.5dp"
                            android:text="Appointments"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/numberOfPatients3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/patientsNumber3"
                            android:padding="2dp"
                            android:text="8"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/jerBlue2"
                            android:textSize="18dp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            android:elevation="6dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="12dp">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/poppins_semibold"
                android:padding="6dp"
                android:text="Looking for a patients"
                android:textColor="@color/jerBlue2"
                android:textSize="18dp"
                />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:columnOrderPreserved="false"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/phy_Consultant"
                    android:layout_width="160dp"
                    android:layout_height="190dp"
                    android:layout_marginRight="13dp"
                    app:cardElevation="8dp"
                    android:elevation="7dp"
                    app:cardBackgroundColor="#F2EEFF"
                    app:cardCornerRadius="6dp"
                    android:layout_gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Patients"
                            android:layout_marginTop="5dp"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textColor="@color/jerBlue2"/>
                        <!--                            <Button-->
                        <!--                                android:layout_width="wrap_content"-->
                        <!--                                android:layout_height="40dp"-->
                        <!--                                android:layout_marginTop="5dp"-->
                        <!--                                android:text="Book Now"-->
                        <!--                                android:textSize="10dp"-->
                        <!--                                android:background="@drawable/btn_style3"-->
                        <!--                                android:textColor="@color/white"/>-->

                        <ImageView
                            android:id="@+id/btn_firstAid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/my_patients" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="190dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="6dp"
                    android:layout_marginRight="20dp"
                    app:cardBackgroundColor="#FFF7DF"
                    android:elevation="7dp"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Video Consultant"
                            android:layout_marginTop="5dp"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textColor="@color/jerBlue2"
                            />
                        <!--                            <Button-->
                        <!--                                android:layout_width="wrap_content"-->
                        <!--                                android:layout_height="40dp"-->
                        <!--                                android:layout_marginTop="5dp"-->
                        <!--                                android:text="Book Now"-->
                        <!--                                android:textSize="10dp"-->
                        <!--                                android:background="@drawable/btn_style3_orange"-->
                        <!--                                android:textColor="@color/white"/>-->

                        <ImageView
                            android:id="@+id/btn_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/videoconsultant" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </GridLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#F3F3F3"
                android:padding="4dp"
                android:layout_marginTop="255dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp">


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="4dp"
                android:padding="4dp"
                app:cardBackgroundColor="#FAFAFA"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="18dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_marginTop="4dp">


                    <TextView
                        android:id="@+id/textViewLab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:padding="6dp"
                        android:text="Schedule Timings"
                        android:textColor="@color/jerBlue2"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewLab"
                        android:padding="2dp"
                        android:text="Check-in patients to see consultants" />

                    <ImageView
                        android:id="@+id/imageViewlab"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:padding="2dp"
                        android:src="@drawable/appointment_pic" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="6dp"
            android:elevation="6dp"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_marginTop="4dp">


                <TextView
                    android:id="@+id/textViewHospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="6dp"
                    android:text="Payments"
                    android:textColor="@color/jerBlue2"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/desHosp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewHospital"
                    android:padding="2dp"
                    android:text="Check out the payments" />


                <ImageView
                    android:id="@+id/imageViewHospital"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:padding="2dp"
                    android:src="@drawable/payments" />

                <Button
                    android:id="@+id/btn_hospitals"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/desHosp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"

                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_background_blue"
                    android:padding="1dp"
                    android:text="Click here"
                    android:textColor="#DFDFDF"
                    android:textSize="12dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>