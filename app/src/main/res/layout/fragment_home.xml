<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"

    tools:context=".Dashboard.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="9dp"
            app:cardCornerRadius="8dp"
            android:elevation="9dp"
            android:padding="8dp"
            app:cardBackgroundColor="#FFECD5"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="6dp"
                    android:text="Select Your City"
                    android:textColor="@color/jerBlue2"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/desCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView"
                    android:padding="2dp"
                    android:text="Select the city to get the best doctors \nnear your locality" />

                <Spinner
                    android:id="@+id/citySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/desCity"
                    android:layout_marginTop="5dp"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:padding="2dp"
                    android:src="@drawable/city" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="9dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:padding="8dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="9dp"
                app:cardCornerRadius="4dp"
                android:padding="4dp"
                android:layout_margin="13dp">


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="9dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="13dp"

                android:padding="4dp"
                app:cardElevation="9dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="6dp"
                    android:text="Looking for a doctor"
                    android:textColor="@color/jerBlue2"
                    android:textSize="20dp"
                  />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                   android:layout_marginTop="30dp"
                    android:layout_marginBottom="12dp"
                    android:columnOrderPreserved="false"
                    android:rowCount="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="13dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#D5EDFF"
                        android:padding="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Physical Consultant"
                                android:layout_marginTop="5dp"
                                android:textSize="17dp"
                                android:layout_gravity="center"
                                android:textColor="@color/jerBlue2"
                                android:textStyle="bold"/>
<!--                            <Button-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="40dp"-->
<!--                                android:layout_marginTop="5dp"-->
<!--                                android:text="Book Now"-->
<!--                                android:textSize="10dp"-->
<!--                                android:background="@drawable/btn_style3"-->
<!--                                android:textColor="@color/white"/>-->

                            <ImageView
                                android:id="@+id/btn_firstAid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/physicalconsultant" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="200dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:elevation="4dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#FFF5B7"
                        android:padding="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Video Consultant"
                                android:layout_marginTop="5dp"
                                android:textSize="17dp"
                                android:layout_gravity="center"
                                android:textColor="@color/jerBlue2"
                                android:textStyle="bold"/>
<!--                            <Button-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="40dp"-->
<!--                                android:layout_marginTop="5dp"-->
<!--                                android:text="Book Now"-->
<!--                                android:textSize="10dp"-->
<!--                                android:background="@drawable/btn_style3_orange"-->
<!--                                android:textColor="@color/white"/>-->

                            <ImageView
                                android:id="@+id/btn_video"
                                android:layout_marginTop="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/videoconsultant" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </GridLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="9dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#FFECEC"
                android:padding="4dp"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_marginTop="4dp">


                    <TextView
                        android:id="@+id/textViewOffline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:padding="6dp"
                        android:text="E.Doctor Care"
                        android:textColor="@color/jerBlue2"
                        android:textSize="20dp"
                     />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewOffline"
                        android:padding="2dp"
                        android:text="Look for symptoms and signs of specific\ndisease and its treatment" />

                    <ImageView
                        android:id="@+id/imageViewOffline"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:padding="2dp"
                        android:src="@drawable/stethoscope" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="#E1FFE2"
                android:padding="4dp"
                android:layout_marginTop="370dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_marginTop="4dp">


                    <TextView
                        android:id="@+id/textViewLab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:padding="6dp"
                        android:text="Looking for labs"
                        android:textColor="@color/jerBlue2"
                        android:textSize="20dp"
                     />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewLab"
                        android:padding="2dp"
                        android:text="search for the laboratory near your locality" />

                    <ImageView
                        android:id="@+id/imageViewlab"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:padding="2dp"
                        android:src="@drawable/lab" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="9dp"
            app:cardCornerRadius="8dp"
            android:elevation="9dp"
            android:padding="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_marginTop="4dp">


                    <TextView
                        android:id="@+id/textViewHospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:padding="6dp"
                        android:text="Search Best Hospital"
                        android:textColor="@color/jerBlue2"
                        android:textSize="20dp"
                     />

                    <TextView
                        android:id="@+id/desHosp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewHospital"
                        android:padding="2dp"
                        android:text="search for the hospital near your locality" />


                    <ImageView
                        android:id="@+id/imageViewHospital"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentRight="true"
                        android:padding="2dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/hospital" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_below="@id/desHosp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/btn_style4"
                        android:padding="12dp"
                        android:text="Search Now"
                        android:textColor="#DFDFDF"
                        android:textSize="14dp" />
                </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>