<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/mainColorWhite"
    tools:context=".Specialization.DoctorsProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        app:cardElevation="4dp">
        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/back2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:onClick="btn_dashboard"
                android:layout_marginRight="70dp"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Doctor"
                android:textColor="@color/jerBlue2"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text=" profile"
                android:layout_marginRight="80dp"
                android:textColor="@color/mainColorYellow"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_person_pin_24" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="20dp">
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardBackgroundColor="@color/white"
           app:cardCornerRadius="8dp"
           android:elevation="12dp"
           app:cardElevation="12dp"
           android:layout_marginTop="2dp">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="6dp"
               android:layout_marginTop="4dp">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/imageView"
                   android:layout_width="95dp"
                   android:layout_height="95dp"
                   android:layout_marginRight="14dp"
                   android:padding="4dp"
                   android:src="@drawable/physicalconsultant" />

               <TextView
                   android:id="@+id/textView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentTop="true"
                   android:layout_toEndOf="@id/imageView"
                   android:text="Clinic"
                   android:textColor="@color/jerBlue2"
                   android:textSize="16dp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/textView55"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentTop="true"
                   android:layout_toEndOf="@id/textView"
                   android:textColor="@color/mainColorYellow"
                   android:text="ea"
                   android:textSize="16dp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/nameTV"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/textView"
                   android:layout_marginStart="8dp"
                   android:layout_marginTop="4dp"
                   android:layout_toEndOf="@id/imageView"
                   android:text="Name"
                   android:textColor="@color/jerBlue2"
                   android:textSize="18sp"
                   android:textStyle="bold" />


               <TextView
                   android:id="@+id/professionTV"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/nameTV"
                   android:layout_marginStart="8dp"
                   android:layout_marginTop="4dp"
                   android:layout_toEndOf="@id/imageView"
                   android:text="Profession"
                   android:textSize="15sp" />

               <TextView
                   android:id="@+id/degreeTV"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/professionTV"
                   android:layout_marginStart="8dp"
                   android:layout_toEndOf="@id/imageView"
                   android:text="Degree"
                   android:layout_marginTop="4dp"
                   android:textSize="15sp" />



               <LinearLayout
                   android:id="@+id/linearLayout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginBottom="3dp"
                   android:layout_marginTop="8dp"
                   android:layout_marginStart="8dp"
                   android:layout_below="@id/degreeTV">

                   <TextView
                       android:id="@+id/textView6"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="Under 15 min"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:layout_margin="3dp"/>


                   <TextView
                       android:id="@+id/textView3"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="line 3"
                       android:textSize="15sp"
                       android:textStyle="bold"
                       android:layout_margin="3dp"/>

                   <TextView
                       android:id="@+id/textView5"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="3dp"
                       android:text="line 5"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:textSize="15sp"
                       android:layout_margin="3dp"
                       android:textStyle="bold" />
               </LinearLayout>

           </RelativeLayout>


       </androidx.cardview.widget.CardView>
   </ScrollView>

</LinearLayout>