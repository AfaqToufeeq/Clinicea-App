<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:clickable="false"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    android:layout_marginTop="7dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:layout_marginTop="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_marginRight="14dp"
            android:padding="4dp"
            android:src="@drawable/physicalconsultant" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/imageView"
            android:text="Clinic"
            android:textColor="@color/jerBlue2"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/textView"
            android:text="ea"
            android:textColor="@color/mainColorYellow"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/checkImage"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignLeft="@id/textView89"
            android:src="@drawable/check_icon"
            android:paddingLeft="60dp"
            android:layout_alignParentRight="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView89"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@id/textView55"
            android:gravity="right"
            android:text="Verified"
            android:textColor="@color/mainColorYellow"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageView"
            android:text="Name"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/professionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTV"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageView"
            android:text="Profession"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/degreeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/professionTV"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageView"
            android:text="Degree"
            android:textSize="15sp" />



        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_below="@id/degreeTV">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Under 15 min"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_margin="3dp"/>


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="100% Satisfied Patients"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="3dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Under 5 years Experience"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_margin="3dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="8dp"
            android:layout_below="@id/linearLayout">

            <Button
                android:id="@+id/btn_docProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visit Profile"
                android:layout_margin="7dp"
                android:textColor="@color/jerBlue"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:background="@drawable/btn_style_transparentsquare"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_bookAppointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Book Appointment"
                android:textSize="15dp"
                android:layout_margin="7dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/btn_style3"
                android:textStyle="bold"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>